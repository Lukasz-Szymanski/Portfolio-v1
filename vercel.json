{
  "version": 2,
  "rewrites": [
    { "source": "/api/b2b/(.*)", "destination": "/service-b2b-data/main.py" },
    { "source": "/api/fintech/(.*)", "destination": "/service-fintech/core/wsgi.py" },
    { "source": "/(.*)", "destination": "/frontend-landing/dist/index.html" }
  ],
  "functions": {
    "service-b2b-data/main.py": { "runtime": "@vercel/python@3.9" },
    "service-fintech/core/wsgi.py": { "runtime": "@vercel/python@3.9" }
  },
  "crons": [
    {
      "path": "/api/b2b/cron/update-crypto",
      "schedule": "0 0 * * *"
    }
  ]
}